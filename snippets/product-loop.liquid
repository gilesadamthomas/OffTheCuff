{% capture collection_handle %}{{ product-loop | handleize }}{% endcapture %}
{% capture url %}{% if collection_handle != "" %}/collections/{{ product-loop }}{{ product.url }}{% else %}{{ product.url }}{% endif %}{% endcapture %}
<div class="col-md-4 col-xs-12 col-sm-4">
                    <div class='row-fluid'>
                      <a href="{{ product.url }}">
                      <img class="img-responsive" src="{{product.featured_image.src | product_img_url: '260x385' }}" alt="Generic placeholder image" style="width: 260px; height: 385px">
                      </a>
                    </div>
                    <!--<div class='row-fluid'>-->
                  <div class="shop-image-text">
                    <a href="{{product.url}}"><span class="item-name-font-family">{{product.title}}</span></a><br>
                    <span class="item-price-font-family">{{product.price}}</span>
                  </div>
                    <!--</div>-->
                </div>