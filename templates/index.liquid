<!-- Begin slider -->
{% if settings.slide_1 != false or settings.slide_2 != false or settings.slide_3 != false or settings.slide_4 != false %}
<!-- Begin slider -->
<div class="container bs-example padding-wrapper-unavailable">
  <div class="flexslider-container">
    <section class="slider">
      <div class="flexslider">
      <ul class="slides">
        {% for i in (1..4) %}
          {% capture show_slide %}slide_{{ i }}{% endcapture %}
          {% capture image %}slideshow_{{ i }}.jpg{% endcapture %}
          {% capture link %}slide_{{ i }}_link{% endcapture %}
          {% capture alt %}slide_{{ i }}_alt{% endcapture %}
          {% if settings[show_slide] %}
          <li>
            <a href="{{ settings[link] }}">
              <img class= "slider-image" src="{{ image | asset_url }}" alt="{{ settings[alt] | escape }}" />
            </a>
          </li>
          {% endif %}
        {% endfor %}
      </ul>
    </div>
    </section>
  </div>
</div>
<!-- End slider -->
{% endif %}
<!-- End slider -->

<div class="jumbotron" style="background: #F2EDEA" id="jumbotron-width">
    <div class="container">
        <div class="row">
          {% for link in linklists.home-featured.links %}  
          <div class="col-sm-4">
                <div class='row-fluid'>
                  {% if link.title == 'SHOP'%}
                  <a href="{{link.url}}"><img class="img-responsive" src="{{'shopy.jpg' | asset_url }}" alt="Generic placeholder image" style="height: 300px; width: 375px"></a>
                  {% endif %}
                  {% if link.title == 'LOOKBOOK'%}
                    <a href="{{link.url}}"><img class="img-responsive" src="{{'lookbook.jpg' | asset_url }}" alt="Generic placeholder image" style="height: 300px; width: 375px"></a>
                  {% endif %}
                  {% if link.title == 'SALE'%}
                    <a href="{{link.url}}"><img class="img-responsive" src="{{'sale.jpg' | asset_url }}" alt="Generic placeholder image" style="height: 300px; width: 375px"></a>
                  {% endif %}
                </div>
                <div class='row-fluid'>
                  <a href="{{link.url}}"><div class="featured-image-text"><span>{{link.title}}</span></div></a>
                </div>
            </div><!-- /.col-lg-4 -->
            <!-- /.col-lg-4 -->
          {% endfor %}
        </div><!-- /.row -->
         
        <br><br>
        {% if linklists.featured-collections.links.size > 0 %}
        <div class="featured-image-slider">
          <div class="wrapper">
            <div class="jcarousel-wrapper" style="border-width: 40px 60px">
              <div class="jcarousel padding-for-featured-slider">
                <ul>
                  {% for link in linklists.featured-collections.links %}
                  <li><a href="{{link.object.url}}">
                    <img src="{{ link.object.featured_image | product_img_url: 'medium'}}" 
                                                              alt="{{ link.object.title | escape }}" class="featured-image-slider-ratio">
                    </a>
                  </li>
                  {% endfor %}
                </ul>
              </div>
              <a href="javascript:void(0);" class="jcarousel-control-prev" style="left: -50px"><img src="{{'arrow.png' | asset_url }}"></a>
              <a href="javascript:void(0);" class="jcarousel-control-next" style="right: -40px"><img src="{{'arrow.png' | asset_url }}"></a>
            </div>
          </div>
        </div>
        {% endif %}
  </div>
</div>

<script>
    $(function() {
        $('.carousel').carousel()
        {
            interval: 500;
        }
    });

</script>