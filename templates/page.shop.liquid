<div class="container shop-page">
    <div class="row">
        <h1 class="text-center info-label-font">WELCOME TO THE SHOP! <span class="label label-default"></span></h1>
        <p class="text-center shop-welcome-text">CHECK OUT OUR NEW COLLECTION</p>
    </div>
    <!-- content -->

    <div class="row shop-container-border">
        <div class="col-md-3 col-xs-12">
            <div class="col-md-12 col-xs-12 col-sm-2">
                <ul class="list-unstyled">
                    <li><h3 class="hot-stuff-text">Hot Stuff</h3></li>
                    <!-- need a divider-->
                </ul>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-2 shop-container-border" id="wrapper-tops-section">
                <ul class="list-unstyled">
                    <li><h3 class="tops-header-text">Tops</h3></li>
                    {% for link in linklists.tops.links %}
                         <li class="{% if link.url == page.url%} active {% endif %}" ><a class="{% if link.url == page.url%} active {% endif %}" href="{{link.url}}">{{link.title}}</a></li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-2 shop-container-border" id="wrapper-tops-section">
                <ul class="list-unstyled">
                    <li><h3 class="tops-header-text">Outwear</h3></li>
                    {% for link in linklists.outwear.links %}
                         <li class="{% if link.url == page.url%} active {% endif %}" ><a class="{% if link.url == page.url%} active {% endif %}" href="{{link.url}}">{{link.title}}</a></li>
                    {% endfor %}
                </ul>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-2 shop-container-border" id="wrapper-tops-section" style="border-bottom: 2px solid #ECECEC">
                <ul class="list-unstyled">
                    <li><h3 class="hot-stuff-text tops-header-text">Vintage</h3></li>
                </ul>
            </div>

            <div class="col-md-12 col-xs-12 col-sm-2 padding-wrapper-unavailable">
               <div class="notice-board">
                   <p>FREE UK SHIPPING ON ORDERS MORE THAN â‚¬ 50.00</p>
               </div>
            </div>
        </div>

        <div class="col-md-9 col-xs-12 col-sm-12 shop-image-portion" style="border-bottom: 2px solid #ECECEC; margin-top: 25px">
          {% paginate collections.all.products by 9 %}
          {% for product in collections.all.products limit: 9 %}	    
          <div class="col-md-4 col-xs-12 col-sm-4">
                    <div class='row-fluid'>
                      <a href="{{ product.url }}">
                        <img class="img-responsive" src="{{product.featured_image.src | product_img_url: 'large' }}" alt="Generic placeholder image" style="width: 260px; height: 385px">
                      </a>
                    </div>
                    <!--<div class='row-fluid'>-->
                  <div class="shop-image-text">
                    <a href="{{product.url}}"><span class="item-name-font-family">{{product.title}}</span></a><br>
                    <span class="item-price-font-family">{{product.price | money_with_currency}}</span>
                  </div>
                    <!--</div>-->
                </div>
          {% endfor %}
          
        </div>
  </div>  
    <div class="row">
        <ul class="pagination pull-right delete-border-pagination">
          {% assign c = 0 %}   
          {% for part in paginate.parts %}
                <li><span>{{ part.title | link_to: part.url}}</span></li>  
                {% if collections.all.products.size/9 != c %}      
                <li><span>-</span></li>
                {% endif%}
          		{% assign c = c+1 %}
 			 {% endfor %}
             
            {% endpaginate %}
        </ul>
    </div>
</div>